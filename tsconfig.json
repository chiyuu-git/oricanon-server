{
  "compilerOptions": {
    "target": "esnext",
    // 这个才可以使用 import.meta.url 代替 __dirname
    "module": "commonjs",
    // 设置这个才可以找到 @nestjs
    // "moduleResolution": "node",
    "declaration": true,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "sourceMap": true,
    "outDir": "./dist",
    "baseUrl": "./",
    "incremental": true,
    "skipLibCheck": true
  }
}
